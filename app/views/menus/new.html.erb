<%= simple_form_for @menu do |f| %>
  <%= f.input :title%>
  <%= f.input :date, as: :date, html5: true, label: 'Date'%>

  <%= f.submit 'Create Menu', class: 'btn btn-primary' %>
<% end %>

<%= simple_form_for @menu_meal do |f| %>
  <%= f.input :menu_id, collection: MenuMeal.all, label_method: :title, value_method: :id, :prompt => 'Choose an existing Item', label: 'Menus' %>

  <%= f.submit 'Fill Menu', class: 'btn btn-primary' %>

<% end %>

