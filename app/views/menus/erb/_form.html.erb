<%= simple_form_for @menu do |f| %>
  <%= f.input :title, label: 'Menu title'%>
  <%= f.input :date, as: :date, html5: true, label: 'Date'%>

  <%= f.simple_fields_for :menu_meals do |menu_meals| %>
    <%= render 'menu_meal_fields',  { f: menu_meals, menu: @menu }  %>
  <% end %>

  <%= f.submit 'submit', class: 'btn btn-primary'%>
<% end %>