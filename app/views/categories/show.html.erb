<% "Category" %>
<h1><%=@category.title %> </h1>

<ol>
<% for meal in @category.meals %>
  <li>
    <%=h meal.title %>
  </li>
<% end %>
</ol>

<p>
  <%= link_to "Edit", edit_category_path(@category) %> |
  <%= button_to 'Delete', category_path(@category), 
    method: :delete,
    form: {data: {turbo_confirm: 'Are you sure?'}} %> |
  <%= link_to "View All", categories_path %>
</p>