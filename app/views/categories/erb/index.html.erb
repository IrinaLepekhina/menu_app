<%= paginate @categories, remote: true %>

<table>
  <tr>
    <th>categories</th>
  </tr>
  <% @categories.each do |category| %>
    <tr>
      <td><%= link_to category.title, category %></td>
      <td><%= link_to "edit", edit_category_path(category) %></td>
      <td><%= button_to 'delete', category_path(category), 
        method: :delete,
        form: {data: {turbo_confirm: 'are you sure?'}} %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "create new category", new_category_path %></p>