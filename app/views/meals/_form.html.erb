<%= simple_form_for meal do |f| %>
  <%= f.input :title%>
  <%= f.input :price_type, collection: Meal.price_types.map { |k,v| [ k.split('_').join(' '), k ]} %>
  <%= f.input :description %>
  <%= f.input :promo, label: 'Promo meal' %>
  <%= f.input :cover_image, as: :file %>
  <%= f.association :category, :prompt => 'Choose an existing Item', label: 'Category' %>
  <%= f.input :price_init, label: 'Price' %>
    
  <%= f.submit 'Create Meal', class: 'btn btn-primary' %>
<% end %>