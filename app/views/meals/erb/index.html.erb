<%= paginate @meals, remote: true %>

<table>
  <tr>
    <th>meals</th>
  </tr>
  <% @meals.each do |meal| %>
    <tr>
      <td><%= link_to meal.title, meal %></td>
      <td><%= link_to "edit", edit_meal_path(meal) %></td>
      <td><%= button_to 'delete', meal, 
        method: :delete, 
        form: { data: { turbo_confirm: 'Are you sure?' } } %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "create new meal", new_meal_path %></p>

