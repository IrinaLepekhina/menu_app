<%= simple_form_for @menu_meal do |f| %>
    <%= f.association :menu, label: 'Menus' %>
    <%= f.association :meal, label: 'Meals' %>
    <%= f.input :price, label: 'Price' %>
    <%= f.submit 'Add meal', class: 'btn btn-primary' %>
<% end %>

